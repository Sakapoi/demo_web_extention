{
  "manifest_version" : 2,
  "name" : "Tab Lister",
  "version" : "1.0",
  "description" : "List opened browser tabs in the current window",
  "icons" :
  {
    "128" : "icon_128.png"
  },
  "permissions" :
  [
    "tabs",
    "clipboardWrite"
  ],
  "browser_action" :
  {
    "default_icon" : "icon_128.png",
    "default_popup" : "popup.html"
  },
  "content_security_policy" : "script-src 'self'; object-src 'self'; style-src 'self' https://cdn.jsdelivr.net https://cdnjs.cloudflare.com;",
  "web_accessible_resources" :
  [
    "styles.css"
  ]
}
